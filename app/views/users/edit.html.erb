<!DOCUTYPE html>
<html>
  <body>
    <h2 class="current_user"><%= @user.name.to_s.humanize %>さんのアカウント</h2>
    <%= form_with model: @user, url: user_path(@user) do |f| %>
    <p>名前：
      <%= f.text_field :name, placeholder: '名前' %>            
    </P>
    <p>email：
      <%= f.email_field :email, placeholder: 'メールアドレス' %>
    </P>
    <p>
      <%= f.submit %>
    </P>
    <% end %>
  </body>